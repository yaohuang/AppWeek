<div class="todoList" id="registerPanel">
    <form id="registerForm">
        <fieldset>
            <legend>Registration Form</legend>
            <ul class="validation-summary-errors" data-bind="foreach: errors">
                <li data-bind="text: $data"></li>
            </ul>
            <ol>
                <li>                    
                    <label for="email">Microsoft email account</label>
                    <input type="text" name="email" data-bind="value: email, hasfocus: true" />
                </li>
            </ol>
            <button type="submit" data-bind="click: registerClick, enable: !registering()">Sign up</button>
        </fieldset>
    </form>

    <p data-bind="visible: done">
        Request submitted. Please check your email for confirmation.
    </p>
</div>
